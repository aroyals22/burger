<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="table-responsive">
        <h2 class="sub-header">List of burgers to DEVOUR!</h2>
        <table class="table table-striped">
          <tbody>
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{burger_name}}
              <button class="devour-burger" data-id="{{this.id}}" data-devour="{{devour}}">devour!</button>
              <br>
              <br>
              {{/unless}}
              {{/each}}
            </ul>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-6">
      <div class="table-responsive">
        <h2 class="sub-header">Devoured burgers!</h2>
        <table class="table table-striped">

          <tbody>
             <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{burger_name}}
              
              <br>
              <br>
              {{/if}}
              {{/each}}
            </ul>
           
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

<div class="container">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add burger</button>
  </form>
</div>